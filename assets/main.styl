// buttons
.btn
  display inline-block
  text-decoration: none
  color #ffffff
  height: 48px
  font-size: 16px
  line-height: 48px
  cursor pointer
  padding: 0 47px
  border-radius: 24px
  border: solid 1px #ffffff
  transition: all 0.3s ease
  &:hover
    background: rgba(255, 255, 255, 0.05)
    border-color: #e19d45
    color #e19d45
